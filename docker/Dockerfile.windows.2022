# escape=`

FROM mcr.microsoft.com/powershell:windowsservercore-ltsc2022

RUN `
  mkdir tmp && mkdir git`
  && curl -sSfLo tmp/file.zip https://github.com/git-for-windows/git/releases/download/v2.47.1.windows.1/MinGit-2.47.1-64-bit.zip `
  && tar -C c:\git -oxzf tmp/file.zip`
  && rmdir /Q /S tmp

RUN `
  mkdir tmp`
  && curl -sSfLo tmp/file.zip https://github.com/git-lfs/git-lfs/releases/download/v3.6.0/git-lfs-windows-amd64-v3.6.0.zip `
  && tar -C tmp -oxzf tmp/file.zip`
  && robocopy tmp/git-lfs-3.6.0 c:\git\usr\bin /s /e || exit 0`
  && rmdir /Q /S tmp

# Add git to PATH
RUN setx /M PATH "%PATH%;C:/git/cmd;C:/git/mingw64/bin;C:/git/usr/bin"

RUN git config --global init.defaultBranch main

ADD windows/* /bin/

# https://github.com/PowerShell/PowerShell/issues/6211#issuecomment-367477137
USER ContainerAdministrator
RUN setx /M PATH "%PATH%;C:\Program Files\PowerShell"

SHELL ["pwsh", "-Command", "$ErrorActionPreference = 'Stop'; $ProgressPreference = 'SilentlyContinue';"]
CMD [ "pwsh", "C:\\bin\\clone.ps1" ]
